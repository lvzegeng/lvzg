{
  "name": "lvzg",
  "version": "3.1.5",
  "description": "前端自动部署工具",
  "main": "./bin/lvzg.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "npm version patch&&npm publish --access public --tag latest",
    "test-release": "npm publish --dry-run"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "files": [
    "lib",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvzegeng/lvzg.git"
  },
  "author": "lvzegeng",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lvzegeng/lvzg/issues"
  },
  "homepage": "https://github.com/lvzegeng/lvzg#readme",
  "bin": {
    "lvzg": "./bin/lvzg.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "cat ./eslinterror.log ./stylelinterror.log"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "node scripts/eliminateError.js eslint --output-file ./eslinterror.log --fix",
      "git add"
    ],
    "**/*.{html,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^4.0.0",
    "fs-extra": "^8.1.0",
    "inquirer": "^7.0.0",
    "log-symbols": "^3.0.0",
    "ora": "^4.0.2"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2"
  }
}
